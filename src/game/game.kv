<RootWidget>:
    orientation: 'vertical'
    padding: '10dp'
    spacing: '10dp'

    info_label: info_label

    Label:
        text: "Multi-Armed Bandit Game"
        font_size: '65sp'
        height: '80dp'
        halign: 'center' 
        size_hint_y: None

    Label:
        id: info_label
        markup: True
        font_size: '50sp'
        height: '80dp'
        halign: 'center'    

    BoxLayout:
        id: option_box
        orientation: 'horizontal'
        spacing: '20dp'
        padding: '20dp'  

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Option " + str(1)
                font_size: '30sp'
                on_press: root.select_option(self, 1)
            Label:
                id: result_label_1
                font_size: '20sp'
                text: ''
                text_size: self.width, None
                halign: 'center'
                markup: True

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Option " + str(2)
                font_size: '30sp'
                on_press: root.select_option(self, 2)
            Label:
                id: result_label_2
                font_size: '20sp'
                text: ''
                text_size: self.width, None
                halign: 'center'
                markup: True

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Option " + str(3)
                font_size: '30sp'
                on_press: root.select_option(self, 3)
            Label:
                id: result_label_3
                font_size: '20sp'
                text: ''
                text_size: self.width, None
                halign: 'center'
                markup: True

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Option " + str(4)
                font_size: '30sp'
                on_press: root.select_option(self, 4)
            Label:
                id: result_label_4
                font_size: '20sp'
                text: ''
                text_size: self.width, None
                halign: 'center'
                markup: True

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Option " + str(5)
                font_size: '30sp'
                on_press: root.select_option(self, 5)
            Label:
                id: result_label_5
                font_size: '20sp'
                text: ''
                text_size: self.width, None
                halign: 'center' 
                markup: True

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None

        Label:
            size_hint_y: None
            size_hint_x: 1

        Button:
            id: restart_button
            text: "Reset"
            size_hint_y: None
            size_hint_x: None
            height: '50dp'
            width: '200dp'
            font_size: '20sp'
            on_press: root.restart()

        Label:
            size_hint_y: None
            size_hint_x: 1

    Label:
        size_hint_y: None
        height: '20dp'